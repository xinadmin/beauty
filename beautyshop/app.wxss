/**app.wxss**/
@import "./lib/weui.wxss";
.fr {
  float: right;
}
.fl {
  float: left;
}
button {
  outline:none;
  border-radius: 0;
}
button[plain]{
   border:0 ;
   background-color:#ed708a;
  color:white;
  border-radius:30rpx;
  display:inline-block;
  width:120rpx;
  height:50rpx;
  text-align:center;
  line-height:50rpx;
  font-size:25rpx;
  padding:0;
  margin:0;
   } 
page{
  background: #fff;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}

/*隐藏滚动条*/
::-webkit-scrollbar{    
  height: 0;
  width: 0;
  color: transparent;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* page{
  background-color: #f9f9f9;
} */
.personal{
  width: 48rpx;
  height: 48rpx;
  margin-left:10rpx;

}
.slide-image{
  width: 100%;
  height: 100%;
}

/* 定位搜索 */
.hade-a{
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.hade-b{
  width: 20%;
  display: flex;
  align-items: center;
}
.hade-c{
  width: 75%;
  position: relative;
  display: flex;
  align-items: center;
}
.search{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  
}
.search-a{
  background-color: #fafafa;
  border-radius: 10rpx;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
  width: 100%;
  padding-left:70rpx;
}
.phcolor{
  color: #c8c8c8;
}
.cityLength{
  text-overflow: ellipsis;
  overflow: hidden; 
  white-space: nowrap;
  display: inline-block;
  width: 90rpx;
  height: 30rpx;
  line-height: 30rpx;
}
/* tab栏 */
.navbar {
    display: flex;
    justify-content: space-around;
    width:100%;

}
.navbar-item {
    text-align: center;
    font-size: 14px;
    color:#999999;
    margin-bottom: -1px;
    margin:0 15rpx;

}
.navbar-text {
    display: block;
    padding-top:10px;
    margin:auto;

}
.navbar-text.active {
    border-bottom: 2px solid #ed708a;
    color:#ed708a;
    font-weight: bold;
}
.hidden {
    display: none;
}

/* 返回 */
.back{
  width: 40rpx;
  height: 40rpx;
  margin-right:35rpx;
  margin-left:25rpx;

}

#allhen{
  position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1040;
    background-color: #000;
    opacity: .5;
    color: white;
}
#allhen .meimen{
  text-align: center;
  margin-top: 500rpx;
}