.detail_hade{
  background-color: #e0e0e0;
  color: white;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  font-size: 34rpx;
}
.detail_body{
  padding: 30rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0px 5rpx 0px rgba(0,0,0,0.05);
  box-sizing: border-box;
}
.detail_body_left{
  float: left;
  display: inline-block;
}
.detail_body_a{
  font-size: 34rpx;
}
.detail_body_b{
  font-size: 30rpx;
  color: #007aff;
}
.detail_body_c{
  font-size: 30rpx;
  color: #858585;
}